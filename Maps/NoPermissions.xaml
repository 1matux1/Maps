<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maps.NoPermissions"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="No permissions granted!!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Status:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                TextColor="Red"/>
            <Label x:Name="PermStatus"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                TextColor="Red"/>

            <Button Text="Grant" Clicked="GrantPermissions"/>

            <Button Text="Go" Clicked="GoTo"/> <!--  <<<< temp -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>